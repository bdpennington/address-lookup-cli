{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "outDir": "build"
  },
  "include": [
    "**/*.ts",
    "**/*.js",
  ],
  "exclude": ["node_modules", "dist"]
}
